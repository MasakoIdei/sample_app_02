<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp02</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- flashにメッセージがある時 -->
<% unless flash.empty? %>
 　<script type="text/javascript">
 　　<% flash.each do |f| %>
 　　　<% type = f[0].to_s.gsub('alert','error').gsub('notice','info') %>
　　　　　toastr['<%=type %>']('<%=f[1] %>');
 　　<% end %>
　　</script>
<% end %>
    <header>
      <h1>All Lists</h1>
    </header>
    <nav>
      <ul class= "nav-list">
        <li class= "nav-list-item">
          <%= link_to "Top", root_path %>
        </li>
        <li class= "nav-list-item">
          <%= link_to "Lists", todolists_index_path %>
        </li>
        <li class= "nav-list-item">
          <%= link_to "New List",  todolists_new_path %>
        </li>
      </ul>
    </nav>
    <%= yield %>
    <footer> &copy; All Lists</footer>
  </body>
</html>
